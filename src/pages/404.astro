---
import { SITE_TITLE } from "../consts";
import PageLayout from "../layouts/PageLayout.astro";
import BaseHead from "../components/BaseHead.astro";
import LinkButton from "../components/LinkButton.astro";
---

<PageLayout>
  <BaseHead
    title={`404 Not Found | ${SITE_TITLE}`}
    description={"Not Found Page for Daniel Brai's Portfolio"}
  />
  <Fragment slot="main">
    <main class="mt-20 flex items-center justify-center">
      <div class="flex flex-col items-center justify-center">
        <h1 class="text-9xl font-bold" aria-label="404 Not Found">404</h1>
        <span aria-hidden="true">¯\_(ツ)_/¯</span>
        <p class="mt-4 text-2xl sm:text-3xl">Page Not Found</p>
        <LinkButton
          noDecorate={false}
          href="/"
          className="my-6 underline decoration-dashed underline-offset-8 text-lg"
        >
          Go back home
        </LinkButton>
      </div>
    </main>
  </Fragment>
</PageLayout>
